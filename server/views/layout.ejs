<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-20px) rotate(5deg); }
    }
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @keyframes shimmer {
      0% { background-position: -1000px 0; }
      100% { background-position: 1000px 0; }
    }
    
    :root {
      --primary: #00B4A8;
      --primary-light: #26D0CE;
      --primary-dark: #008A7C;
      --accent: #1DB584;
      --accent-dark: #15A370;
      --bg: #0a0e27;
      --bg-secondary: #1a1f3a;
      --bg-tertiary: #2a2f4a;
      --text: #f1f5f9;
      --text-muted: #cbd5e1;
      --border: rgba(255, 255, 255, 0.1);
    }
    
    * { 
      box-sizing: border-box; 
      margin: 0;
      padding: 0;
    }
    
    body {
      margin: 0;
      font-family: 'Segoe UI', 'Inter', system-ui, -apple-system, sans-serif;
      background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 50%, #0a0e27 100%);
      color: var(--text);
      position: relative;
      overflow-x: hidden;
      min-height: 100vh;
    }
    
    /* Animated Background Shapes */
    .animated-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 0;
    }
    
    .bg-shape {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      opacity: 0.3;
      animation: float 20s ease-in-out infinite;
    }
    
    .shape-1 {
      width: 500px;
      height: 500px;
      background: radial-gradient(circle, rgba(0, 180, 168, 0.4) 0%, transparent 70%);
      top: -200px;
      right: -200px;
      animation-delay: 0s;
    }
    
    .shape-2 {
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(29, 181, 132, 0.3) 0%, transparent 70%);
      bottom: -150px;
      left: -150px;
      animation-delay: 7s;
    }
    
    .shape-3 {
      width: 350px;
      height: 350px;
      background: radial-gradient(circle, rgba(0, 180, 168, 0.25) 0%, transparent 70%);
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      animation-delay: 14s;
    }
    
    .container { 
      max-width: 1400px; 
      margin: 0 auto; 
      padding: 40px 60px;
      position: relative;
      z-index: 1;
    }
    
    header { 
      display: flex; 
      align-items: center; 
      justify-content: space-between; 
      margin-bottom: 32px;
      animation: fadeInUp 0.6s ease;
    }
    
    .brand { 
      font-size: 1.5rem; 
      font-weight: 800; 
      letter-spacing: -0.5px;
      background: linear-gradient(135deg, #00B4A8 0%, #1DB584 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .badge { 
      background: rgba(0, 180, 168, 0.15);
      color: var(--primary-light);
      padding: 8px 16px;
      border-radius: 999px;
      border: 1px solid rgba(0, 180, 168, 0.3);
      font-size: 0.9rem;
      font-weight: 600;
      backdrop-filter: blur(10px);
    }
    
    h1 { 
      margin: 0 0 16px;
      font-size: 2.6rem;
      letter-spacing: -1px;
      font-weight: 800;
      background: linear-gradient(135deg, #00B4A8 0%, #1DB584 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: fadeInUp 0.8s ease;
    }
    
    p.lead { 
      margin: 0 0 24px;
      color: var(--text-muted);
      font-size: 1.1rem;
      line-height: 1.7;
      animation: fadeInUp 1s ease;
    }
    
    .cta-row { 
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
      margin: 24px 0 40px;
      animation: fadeInUp 1.2s ease;
    }
    
    .btn {
      background: linear-gradient(135deg, #00B4A8 0%, #1DB584 100%);
      color: white;
      border: none;
      border-radius: 10px;
      padding: 14px 28px;
      font-weight: 700;
      letter-spacing: 0.3px;
      text-decoration: none;
      box-shadow: 0 6px 20px rgba(0, 180, 168, 0.4);
      transition: all 0.3s ease;
      font-size: 15px;
      display: inline-block;
    }
    
    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(0, 180, 168, 0.5);
    }
    
    .btn.secondary { 
      background: rgba(255, 255, 255, 0.08);
      border: 1px solid var(--border);
      color: var(--text);
      box-shadow: none;
      backdrop-filter: blur(10px);
    }
    
    .btn.secondary:hover {
      background: rgba(255, 255, 255, 0.12);
      box-shadow: 0 8px 24px rgba(0, 180, 168, 0.2);
    }
    
    .card-grid { 
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
      margin-top: 20px;
      animation: fadeInUp 1.4s ease;
    }
    
    .card { 
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(20px);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 24px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(0, 180, 168, 0.1), transparent);
      transition: left 0.5s;
    }
    
    .card:hover::before {
      left: 100%;
    }
    
    .card:hover {
      transform: translateY(-8px);
      background: rgba(255, 255, 255, 0.08);
      box-shadow: 0 12px 40px rgba(0, 180, 168, 0.3);
      border-color: rgba(0, 180, 168, 0.5);
    }
    
    .card h3 { 
      margin: 0 0 12px;
      color: white;
      font-size: 1.2rem;
      font-weight: 700;
    }
    
    .muted { 
      color: var(--text-muted);
      font-size: 0.95rem;
      line-height: 1.6;
    }
    
    footer { 
      margin-top: 60px;
      color: var(--text-muted);
      font-size: 0.9rem;
      text-align: center;
      border-top: 1px solid var(--border);
      padding-top: 24px;
      animation: fadeInUp 1.6s ease;
    }
    
    a { 
      color: var(--primary-light);
      text-decoration: none;
      transition: color 0.3s ease;
    }
    
    a:hover { 
      color: #26D0CE;
    }
    
    @media (max-width: 968px) {
      .container {
        padding: 30px 20px;
      }
      h1 {
        font-size: 2rem;
      }
      .card-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <!-- Animated Background -->
  <div class="animated-bg">
    <div class="bg-shape shape-1"></div>
    <div class="bg-shape shape-2"></div>
    <div class="bg-shape shape-3"></div>
  </div>
  
  <div class="container">
    <%- body %>
  </div>
</body>
</html>
